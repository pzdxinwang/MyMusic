<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_width="387dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/teal_200"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_toplist_songpic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_mylogo" />

                <TextView
                    android:id="@+id/tv_toplist_updateFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/iv_toplist_songpic"
                    android:layout_alignBottom="@id/iv_toplist_songpic"
                    android:text="每周三更新"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_toplist_songname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_toplist_songpic"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="名字"
                    android:textColor="@color/red1" />

                <TextView
                    android:id="@+id/tv_toplist_songdescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_toplist_songname"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:paddingLeft="5dp"
                    android:text="介绍"
                    android:textColor="@color/red1" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>